@page
@model IMS.Pages.CourseViews.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h4>Edit Course</h4>
<hr />
<div class="row">
    <div class="col-md-6 font-weight-bold">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Course.Id" />
            <div class="form-group">
                <label asp-for="Course.CourseName" class="control-label"></label>
                <input asp-for="Course.CourseName" class="form-control" />
                <span asp-validation-for="Course.CourseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.Duration" class="control-label"></label>
                <input asp-for="Course.Duration" class="form-control" />
                <span asp-validation-for="Course.Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.Grade" class="control-label"></label>
                <input asp-for="Course.Grade" class="form-control" />
                <span asp-validation-for="Course.Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="./Index" type="button" class="btn btn-info">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
